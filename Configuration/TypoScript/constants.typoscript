############
### PAGE ###
############
page {
    theme {
        navigation.style = inverse
        meta.navigationValue = 4,6
        copyright.text = &copy; 2020 Gapp GmbH
        language.enable = 0
        googleFont {
            enable = 1
            font = Gudea
            weight = 300,400,700
        }

    }
    logo {
        file = EXT:customer_sitepackage/Resources/Public/Images/logo.svg
        fileInverted = EXT:customer_sitepackage/Resources/Public/Images/logo-inverted.svg
        height = 87
        width = 164
        alt = Gapp Holzbau
        linktitle = Gapp Holzbau
    }
    favicon {
        file = EXT:customer_sitepackage/Resources/Public/Icons/favicon.ico
    }
    preloader {
        logo.file = EXT:bootstrap_package/Resources/Public/Images/Icons/Ionicons/android-timer.svg
        backgroundColor = #eeeeee
    }
    fluidtemplate {
        layoutRootPath = EXT:customer_sitepackage/Resources/Private/Layouts/Page/
        partialRootPath = EXT:customer_sitepackage/Resources/Private/Partials/Page/
        templateRootPath = EXT:customer_sitepackage/Resources/Private/Templates/Page/
    }
}


##################
### EXTENSIONS ###
##################
plugin.bootstrap_package {
    view {
        layoutRootPath = EXT:customer_sitepackage/Resources/Private/Layouts/
        partialRootPath = EXT:customer_sitepackage/Resources/Private/Partials/
        templateRootPath = EXT:customer_sitepackage/Resources/Private/Templates/
    }
}


########################
### CONTENT ELEMENTS ###
########################
plugin.bootstrap_package_contentelements {
    view {
        layoutRootPath = EXT:customer_sitepackage/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:customer_sitepackage/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:customer_sitepackage/Resources/Private/Templates/ContentElements/
    }
    header.defaultHeaderType = 1
}


################################
### BOOTSTRAP SCSS CONSTANTS ###
################################
plugin.bootstrap_package.settings.scss {
    ### colors ###
    blue = #61B2D4
    red = #d4003c
    orange = #ee9200
    green = #9CB502
    yellow = #F4D733
    black = #222222
    white = #ffffff

    primary = rgba(254,220,158,.7)
    secondary = #701B11
    body-bg = $white
    body-color = #58585a
    link-color = $secondary
    link-alternate-color = darken($secondary, 20%)
    footer-sections = (content:(background: $primary, color: $body-color, link-color: $link-color), meta:(background: $body-bg, color: $body-color, link-color: $link-color))

    ### Fonts ###
    font-family-sans-serif = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
    font-family-base = $font-family-sans-serif
    font-size-base = 1rem

    ### Headings ###
    headings-font-family = "#{$google-webfont}", sans-serif
    headings-color = $secondary
    headings-font-weight = 400
    h1-font-size = $font-size-base * 2.5
    h2-font-size = $font-size-base * 1.8
    h3-font-size = $font-size-base * 1.5
    h4-font-size = $font-size-base * 1.2
    h5-font-size = $font-size-base * 1

    ### Navbar ###
    # Background Color is set via "bg-primary" class in html
    navbar-brand-padding-y = 0.5rem
    navbar-nav-link-padding-x = 1rem
    navbar-padding-x = $spacer
    navbar-padding-y = $spacer /2

    navbar-light-color = $secondary
    navbar-light-active-color = $secondary
    navbar-light-hover-color = $secondary

    print-page-size = a4
}
